<%- contentFor('content')%>
<div class="d-flex flex-row content justify-content-center mx-auto">
    <form class="card w-50" action="<%=(locals.user && user && user._id)?'/users/edit/'+user._id:'/users/signup'%>" method="post">
        <div class="card-header">
            Inscription
        </div>
        <div class="card-body"> 
            <div class="form-group">
                <label>
                    User Name
                </label>
                <input class="form-control <%if(locals.errors && errors && errors.username){%>is-invalid<% } %>" 
                    name="username" type="text" id="username" placeholder=""
                    value="<%=user.username%>">
                <div class="invalid-feedback">
                    <% if(locals.errors && errors && errors.username) { %>
                        
                                <%=errors.username.message%>
                            
                    <% } %>
                </div>
            </div>  
            <div class="form-group">
                <label>
                    E-mail
                </label>
                <input class="form-control <%if(locals.errors && errors && errors['local.email']){%>is-invalid<% } %>" 
                    name="email" type="email" id="email" placeholder="xxx@xxx.com"
                    value="<%=user.email%>">
                <div class="invalid-feedback">
                    <% if(locals.errors && errors && errors['local.email']) { %>
                        
                        <%=errors['local.email'].message%>
                    
                    <% } %>
                </div>
            </div>  
            <div class="form-group">
                <label>
                    Password
                </label>
                <input class="form-control <%if(locals.errors && errors && errors['local.password']){%>is-invalid<% } %>" 
                    name="password" type="password" id="password" placeholder="" value="<%=user.password?'************':''%>">
                    
                <div class="invalid-feedback">
                    <% if(locals.errors && errors && errors['local.password']) { %>
                        
                        <%=errors['local.password'].message%>
                    
                    <% } %>
                </div>  
            </div>     
            <div class="w-100">
                <input type="submit" value="Sign up" class="btn btn-primary d-block ml-auto btn-tweet">    
            </div>       
        </div>
    </form>
</div>  